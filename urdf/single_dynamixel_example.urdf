<robot name="single_dynamixel_example">

    <link name="dynamixel" />

    <joint name="dynamixel_joint" type="continuous">
        <parent link="dynamixel" />
        <child link="none" />
    </joint>

    <transmission name="dynamixel_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="dynamixel_joint">
            <hardwareInterface>hardware_interface/PosVelJointInterface</hardwareInterface>
            <hardwareInterface>hardware_interface_extensions/PosVelEffJointInterface</hardwareInterface>
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="dynamixel_actuator">
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <link name="none" />

    <!-- -->
    <ros2_control name="LayeredHardware" type="system">
        <hardware>
            <plugin>layered_hardware/LayeredHardware</plugin>
            <param name="layers">
                - name: joint_limits_layer
                  plugin: layered_hardware/JointLimitsLayer
                - name: transmission_layer
                  plugin: layered_hardware/TransmissionLayer
                - name: dynamixel_actuator_layer
                  plugin: layered_hardware_dynamixel/DynamixelActuatorLayer
            </param>
            <param name="dynamixel_actuator_layer">
                serial_interface: /dev/ttyUSB0
                baudrate: 1000000
                actuators:
                    dynamixel_actuator:
                        id: 1
                        torque_constant: 2.41
                        operating_mode_map:
                            dynamixel_joint/position: position
                            dynamixel_joint/velocity: velocity
                            dynamixel_joint/effort: current
            </param>
        </hardware>

        <joint name="dynamixel_joint">
            <command_interface name="position">
                <param name="min">-10</param>
                <param name="max">10</param>
            </command_interface>
            <command_interface name="velocity">
            </command_interface>
            <command_interface name="effort">
            </command_interface>
            <state_interface name="position"/>
        </joint>

        <transmission name="dynamixel_trans">
            <plugin>transmission_interface/SimpleTransmission</plugin>
            <actuator name="dynamixel_actuator" role="dynamixel_actuator"/>
            <joint name="dynamixel_joint" role="dynamixel_joint">
                <mechanical_reduction>1.0</mechanical_reduction>
                <offset>0.0</offset>
            </joint>
        </transmission>

    </ros2_control>

</robot>